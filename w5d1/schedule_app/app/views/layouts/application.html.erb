<!DOCTYPE html>
<html>
<head>
  <title>ScheduleApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
  <% flash.each do |name, msg| %>
    <div class="flash-message flash-message-<%= name %>">
      <%= msg %>
    </div>
  <% end %>
  <a href="https://generalassemb.ly/about">
  <div class='logo'>
  </div></a>
  

   <nav>
        <ul>
          <li>
            <%=link_to 'locations', locations_path %>
          </li>
          <li>
            <%=link_to 'classrooms', classrooms_path %>
          </li>
          <li>
            <%=link_to 'programmes', programmes_path %>
          </li>
          <li>
            <%=link_to 'courses', courses_path %>
          </li>
          <li>
            <%=link_to 'users', users_path %>
          </li>
          <li>
            <%=link_to 'calendar', calendar_path %>
          </li>
        </ul>

      </nav>
    </header>


<div class='login'>
  <% if current_user %>
    Hello <%= current_user.email %>
    <%= link_to "Logout", logout_path %>
  <% else %>
    <%= link_to "Login", new_session_path %> or <%= link_to "Signup", new_user_path %>
  <% end %>
</div>
      



<%= yield %>





</body>
</html>
